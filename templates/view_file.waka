<part header>
<div class="file">
<if $$file{ext} =~ /^jp(?:e)?g|gif|png$/i>
<a href="/<!var $$file{file_url}>" target="_blank"><var $$file{filename}></a><br>

<a href="/<!var $$file{file_url}>" target="_blank">
  <img src="/<!var $$file{thumb_url}>" alt="<var $$file{filename}>" title="<var $$file{filename}>">
</a>
</if>
<if $$file{ext} =~ /^flv|mp4|webm|mkv|avi$/i>
  <video src="/<!var $$file{file_url}>" cover="/<!var $$file{thumb_url}>" loop>
</if>
</div>
<part footer>
